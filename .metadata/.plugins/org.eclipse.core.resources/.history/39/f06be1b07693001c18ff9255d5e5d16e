
public class Palindromo {

	public static void main(String[] args) {
		String palabra = "Somoss o no somos";
		String paldr2 = palabra.toLowerCase().replace(" ", "").replace(",", "").replace(".", " ");
		String textInvrt = new StringBuilder(paldr2).reverse().toString();
		if (textInvrt.equals(paldr2)) {
			System.out.println("El txto " + palabra + " es un palindromo");
		} else {
			System.out.println("El txto " + palabra + " no es un palindromo");

		}

	}

}
